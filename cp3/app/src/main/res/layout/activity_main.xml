<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Pokémon App"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/button_view_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Pokémon"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/button_add_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar Pokemon" />

    <Button
        android:id="@+id/btnadicionarCards"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:text="Adicionar Cards" />

    <Button
        android:id="@+id/btnDesenvolvedores"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:text="Desenvolvedores" />


</LinearLayout>